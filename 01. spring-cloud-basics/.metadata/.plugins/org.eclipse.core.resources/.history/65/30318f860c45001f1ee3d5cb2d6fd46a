server:
  port: 8083
  servlet:
    context-path: /spring-boot-simple

spring:
  application:
    name: spring-boot-simple
  config:
    import: configserver:http://localhost:8888
  datasource:
    driver-class-name: com.mysql.cj.jdbc.Driver
    url: jdbc:mysql://localhost:3306/spring_boot_simple
